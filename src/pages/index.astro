        </p>
      </div>

      <!-- Photo Grid - Replace images in /public/images/gallery/ -->
      {
        showGallery && (
          <div class="grid grid-cols-3 gap-3 mt-6">
            {galleryColumns.map((col) => (
              <div class="flex flex-col gap-3">
                {col.images.map((img) => (
                  <div
                    class={`rounded-xl overflow-hidden group cursor-none ${img.aspect}`}
                  >
                    <img
                      src={img.src}
                      alt={img.alt}
                      class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700 ease-in-out scale-100 group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                ))}
              </div>
            ))}
          </div>
        )
      }
    </section>

    <!-- Projects -->
    <section id="work" class="pt-2 pb-16 scroll-reveal">
      <div
        class="mb-10 flex flex-col md:flex-row md:items-end justify-between gap-6 border-b border-[var(--border-color)] pb-6 relative"
      >
        <div
          class="absolute w-full h-px bottom-0 left-0 bg-gradient-to-r from-[var(--border-color)] via-[var(--foreground-primary)] to-transparent opacity-30"
        >
        </div>
        <div>
