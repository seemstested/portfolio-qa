            let bentoCols = "md:col-span-1";
            let bentoRows = "min-h-[320px]";

            if (index === 0 || index === 3 || index === 6) {
              // occasionally make a card span full width for varied pacing
              bentoCols = "md:col-span-2";
              bentoRows = "min-h-[340px]";
            }

            return (
              <div
                class={`project-bento-card group col-span-1 ${bentoCols} ${bentoRows} fade-up-stagger flex flex-col justify-between`}
                style={`--card-accent: ${accentColor}; animation-delay: ${
                  index * 0.1
                }s`}
              >
                {/* Subtle base grid pattern */}
                <div
                  class="absolute inset-0 z-0 opacity-[0.02] group-hover:opacity-[0.04] transition-opacity duration-500 pointer-events-none"
                  style="background-image: radial-gradient(var(--foreground-primary) 1px, transparent 1px); background-size: 16px 16px;"
                />

                {/* Optional Image */}
                {project.frontmatter.image && (
                  <div class="absolute right-0 bottom-0 w-[55%] h-[45%] z-0 rounded-tl-[16px] overflow-hidden opacity-20 group-hover:opacity-100 transition-all duration-700 ease-out transform group-hover:translate-y-2 group-hover:translate-x-2 border-t border-l border-[var(--border-color)] shadow-2xl">
                    <div class="absolute inset-0 bg-gradient-to-tr from-[var(--card)] to-transparent opacity-80 group-hover:opacity-0 transition-opacity duration-500 z-10" />
