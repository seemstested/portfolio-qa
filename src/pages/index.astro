            // test. break. ship.
          </h2>
          <h3
            class="text-[32px] sm:text-[40px] md:text-[48px] font-black tracking-[-0.03em] leading-[0.95] uppercase"
          >
            Selected <br />
            <span class="text-gradient">Works.</span>
          </h3>
        </div>
        <p
          class="text-[13px] md:text-[14px] text-[var(--foreground-secondary)] max-w-[280px] leading-[1.6] font-medium border-l-2 border-[var(--foreground-primary)] pl-4"
        >
          A collection of test automation frameworks and quality engineering
          initiatives.
        </p>
      </div>

      <div
        class="grid grid-cols-1 md:grid-cols-2 auto-rows-min gap-4 md:gap-5 bento-grid"
      >
        {
          projects.map((project, index) => {
            const websiteLink = project.frontmatter.links?.find((l: any) =>
              l.label.toLowerCase().includes("website")
